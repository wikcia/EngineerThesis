<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@android:color/transparent</item>
        <item name="titleTextAppearance">@style/CustomToolbarTitleText</item>
        <item name="subtitleTextAppearance">@style/CustomToolbarSubtitleText</item>
    </style>

    <style name="CustomToolbarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/main2</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="CustomToolbarSubtitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="TransparentToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="CustomButtonStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/main</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="CustomTextStyle">
        <item name="android:fontFamily">@font/ubuntu_bold</item> <!-- Wybierz niestandardową czcionkę lub systemową -->
        <item name="android:textSize">16sp</item> <!-- Rozmiar tekstu -->
        <item name="android:textColor">#FFFFFF</item> <!-- Kolor tekstu (biały) -->
    </style>
</resources>