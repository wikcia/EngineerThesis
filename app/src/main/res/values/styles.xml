<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@android:color/transparent</item>
        <item name="titleTextAppearance">@style/CustomToolbarTitleText</item>
        <item name="subtitleTextAppearance">@style/CustomToolbarSubtitleText</item>
    </style>

    <style name="CustomToolbarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/main2</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="CustomToolbarSubtitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="TransparentToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="CustomButtonStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#381479</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="CustomTextStyle">
        <item name="android:fontFamily">@font/ubuntu_bold</item> <!-- Wybierz niestandardową czcionkę lub systemową -->
        <item name="android:textSize">16sp</item> <!-- Rozmiar tekstu -->
        <item name="android:textColor">#FFFFFF</item> <!-- Kolor tekstu (biały) -->
    </style>

    <style name="CustomSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/main2</item>
        <item name="colorControlHighlight">@color/main2</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item> <!-- Kolor paska nawigacji -->
        <item name="tabIndicatorHeight">4dp</item> <!-- Wysokość paska nawigacji -->
        <item name="tabPaddingStart">16dp</item> <!-- Wypełnienie początku zakładek -->
        <item name="tabPaddingEnd">16dp</item> <!-- Wypełnienie końca zakładek -->
    </style>

    <style name="primary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:layout_marginTop">32dp</item>
    </style>
</resources>